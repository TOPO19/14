{% extends 'base.html.twig' %}

{% block title %}Mon Amour{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center px-4">
    <div class="text-center fade-in">
        <div class="heart-pulse mb-8 text-7xl md:text-8xl">❤️</div>

        <h1 class="font-romantic text-4xl md:text-6xl lg:text-7xl text-rose-deep mb-6 fade-in-delay-1">
            Salut Sima ❤️
        </h1>

        <p class="text-lg md:text-xl text-gray-500 font-light mb-12 fade-in-delay-2 max-w-md mx-auto">
            Prête à revivre notre histoire ?
        </p>

        <a href="{{ path('quiz') }}"
           class="fade-in-delay-3 inline-block bg-gradient-to-r from-rose-warm to-rose-deep text-white font-romantic text-lg md:text-xl px-10 py-4 rounded-full shadow-lg hover:shadow-2xl transform hover:scale-105 transition-all duration-500 hover:from-rose-deep hover:to-pink-600">
            Commencer notre histoire
        </a>

        <div class="mt-16 fade-in-delay-3">
            <div class="flex justify-center space-x-2 opacity-50">
                <span class="inline-block w-2 h-2 bg-rose-blush rounded-full animate-bounce" style="animation-delay: 0s"></span>
                <span class="inline-block w-2 h-2 bg-rose-blush rounded-full animate-bounce" style="animation-delay: 0.2s"></span>
                <span class="inline-block w-2 h-2 bg-rose-blush rounded-full animate-bounce" style="animation-delay: 0.4s"></span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
